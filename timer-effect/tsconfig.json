{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["editor.tsx", "index.tsx"],
  "exclude": ["**/node_modules", ".out", "dist", "**/*.test.*", "__mocks__"]
}
